<Window x:Class="Couche_IHM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Couche_IHM"
        xmlns:vm="clr-namespace:Couche_IHM.VueModeles"
        xmlns:rules="clr-namespace:Couche_IHM.BindingRules"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="Gallium" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Window.Resources>
        <rules:FrameEnumConverterName x:Key="EnumToNameConverter"/>

    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="225" />
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <!-- PREMIERE COLONNE -->
        
        <Grid Grid.Column="0" x:Name="Menu" Background="#252422" HorizontalAlignment="Left">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*" Tag="Nom app"/>
                <RowDefinition Height="20*" Tag="Bouton"/>
                <RowDefinition Height="1.1*" Tag="Autre choix"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <!-- Icone Gallium -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Image
                    Grid.Row="1"
                    Grid.Column="1"
                    Source="/Images/galliumlite.png"/>
            </Grid>
            
           

            <Rectangle Tag="Séparation" Grid.Row="0" Fill="White" StrokeThickness="20" Height="2" Width="900"  HorizontalAlignment="Center" Margin="12" VerticalAlignment="Bottom" />

            <!-- Choix Pages -->
            <Viewbox Grid.Column="0" Grid.Row="1" Stretch="Uniform">
                <StackPanel >
                    <Button 
                        Height="45" 
                        Name="buttonAccueil"
                        Style="{StaticResource buttonNavBarre}" 
                        Command="{Binding ChangeFrame}"
                        CommandParameter="{x:Static vm:Frame.FRAMEACCUEIL}"
                        FontSize="16"
                        Content="Accueil"   
                        Width="185"  />
                    <Button 
                        Height="45" 
                        FontSize="16"
                        Name="buttonCaisse"
                        Style="{StaticResource buttonNavBarre}" 
                        Command="{Binding ChangeFrame}"
                        CommandParameter="{x:Static vm:Frame.FRAMECAISSE}"
                        Content="Caisse" />
                    <Button 
                        Height="45" 
                        FontSize="16"
                        Name="buttonAccount"
                        Style="{StaticResource buttonNavBarre}" 
                        Command="{Binding ChangeFrame}"
                        CommandParameter="{x:Static vm:Frame.FRAMEACCOUNT}"
                        Content="Acomptes"/>
                    <Button 
                        Name="buttonStock"
                        Height="45" 
                        FontSize="16"
                        Style="{StaticResource buttonNavBarre}" 
                        Command="{Binding ChangeFrame}"
                        CommandParameter="{x:Static vm:Frame.FRAMESTOCK}"
                        Content="Stock"/>
                    <Button 
                        Name="buttonComptes"
                        Height="45" 
                        FontSize="16"
                        Style="{StaticResource buttonNavBarre}" 
                        Command="{Binding ChangeFrame}"
                        CommandParameter="{x:Static vm:Frame.FRAMECOMPTES}"
                        Content="Comptes"/>
                </StackPanel>
            </Viewbox>
            <Grid  Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="0.3*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="0.3*"/>
                </Grid.RowDefinitions>

                <Button 
                    Style="{StaticResource buttonImage}" 
                    Command="{Binding ChangeFrame}"
                    CommandParameter="{x:Static vm:Frame.FRAMESTATISTIQUE}"
                    Grid.Row="0"
                    Grid.Column="0">
                    <materialDesign:PackIcon 
                        Width="20" 
                        Height="20" 
                        Foreground="White" 
                        Kind="ChartLine"/>
                </Button>
                
                <Button 
                    Style="{StaticResource buttonImage}"
                    Command="{Binding ChangeFrame}"
                    CommandParameter="{x:Static vm:Frame.FRAMELOG}"
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="-10,0,0,0" 
                    >
                    <materialDesign:PackIcon 
                        Width="20" 
                        Height="20" 
                        HorizontalAlignment="Right" 
                        Foreground="White" 
                        Kind="History"/>
                </Button>
                <Button
                    
                    Style="{StaticResource buttonImage}"
                    Grid.Column="2"
                    Grid.RowSpan="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right" Click="Disconnect">
                    <materialDesign:PackIcon 
                        Width="26" 
                        Height="26"
                        Foreground="White" 
                        Kind="Logout"/>
                </Button>

            </Grid>
        </Grid>

            <!-- DEUXIEME COLONNE -->
            <Grid  Grid.Column="1"   >
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="12*"/>
                </Grid.RowDefinitions>

                <!-- Header de la frame -->
                <materialDesign:Card Grid.Row="0">
                    <Grid>
                    
                    <!-- Nom de la frame  -->
                        <TextBlock 
                            Text="{Binding Frame, Converter={StaticResource EnumToNameConverter}}"
                            FontSize="25" 
                            VerticalAlignment="Center" 
                            Margin="40,0,0,0" 
                            Foreground="Black" 
                            FontWeight="Bold"/>

                        <!-- Info du compte connecté-->
                    <StackPanel Margin="0,0,20,0" HorizontalAlignment="Right" Orientation="Horizontal">
                        <Image 
     Grid.Column="0" 
     Source="/Images/logoEtiq.png" 
     Width="40" 
     Height="auto" 
     VerticalAlignment="Center"  
     HorizontalAlignment="Left" />
                        <StackPanel 
     Margin="10,0,0,0"
     Grid.Column="1" 
     VerticalAlignment="Center" 
     HorizontalAlignment="Center">
                            <TextBlock 
         Text="{Binding CompteConnected.NomCompletIHM}" 
         FontSize="15" 
         FontWeight="Bold"/>
                            <TextBlock 
         Text="{Binding CompteConnected.Role}" 
         FontSize="13" 
         FontWeight="DemiBold" />
                        </StackPanel>
                    </StackPanel>

                </Grid>
                </materialDesign:Card>
                <Frame 
                    Grid.Row="1"
                    Source="{Binding Uri}" 
                    NavigationUIVisibility="Hidden"/>
                
            </Grid>

    </Grid>
</Window>
